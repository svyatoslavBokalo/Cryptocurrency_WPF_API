<Page x:Class="Cryptocurrencies.Pages.ShowDetail_SecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cryptocurrencies.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowDetail_SecondPage">

    <Grid>
        <ListView x:Name="LVDetail" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,203,0,10">
            <ListView.View>
                <GridView x:Name="GVinLVCrypto">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=exchangeId}" Header="Id" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=name}" Header="name" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=name}" Header="name" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=symbol}" Header="symbol" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=priceUsd}" Header="priceUsd" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
